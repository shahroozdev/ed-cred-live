{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "mail/templates/**/*",     
        "outDir": "dist/",                   
        "watchAssets": true
      },
      {
        "include": "../uploads/**/*",                
        "outDir": "dist/",
        "watchAssets": true
      }
    ],
    "watchAssets": true,
    "deleteOutDir": true
  }
}
