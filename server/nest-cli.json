{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "mail/templates/",  
        "outDir": "dist/src/"
      },
      {
        "include": "../uploads/**/*",
        "outDir": "dist/uploads/",
        "watchAssets": true
      }
    ],
    "watchAssets": true,
    "deleteOutDir": true
  }
}
